<!DOCTYPE html>
<html>
<head>
  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
  <meta content="width=device-width, initial-scale=1.0, maximum-scale=1" name="viewport">
  <title>Dradis Framework</title>
  <%= favicon_link_tag image_path('favicon.ico') %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6/html5shiv.min.js"></script>
  <![endif]-->

  <%= stylesheet_link_tag "application" %>
</head>
<body class="<%= controller_name %>">
  <div class="navbar navbar-static-top">
    <div class="navbar-inner">
      <div class="container-fluid">

        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>

        <a class="brand" href="javascript:void()">Dradis Framework</a>


        <div class="nav-collapse collapse">
          <!-- <form class="navbar-search" style="width: 80%;">
            <input type="text" class="search-query" placeholder="Search" style="width: 100%;">
          </form> -->

          <ul class="nav">
            <li><%= link_to new_node_note_path(@node) do %><i class="icon-edit icon-white"></i> New note <% end %></li>
          </ul>

          <ul class="nav pull-right">
            <% if current_user %>
            <li><%= link_to 'Logout', logout_path %></li>
            <% else %>
            <li><%= link_to 'Login', login_path %></li>
            <% end %>
          </ul>
          <p class="pull-right navbar-text"><%= current_user %></p>
        </div><!--/.nav-collapse -->


      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        <ul class="nav nav-tabs nav-stacked">
          <li><a href="#"><i class="icon-chevron-down"></i> Uploaded files</a></li>
          <li class="active2"><a href="#"><i class="icon-chevron-right"></i> scope</a></li>
          <li><a href="#"><i class="icon-chevron-right"></i> web / web service</a></li>
          <li><a href="#"><i class="icon-chevron-right"></i> infrastructure</a></li>
          <% for node in @nodes do %>
          <li><a href="javascript:void()"><i class="icon-chevron-right"></i> <%= node.label %></a></li>
          <% end %>
        </ul>

        <div class="input-append">
          <%= form_for Dradis::Node.new do |f| %>
          <input class="span8" type="text" placeholder="New node..."/><button class="btn" type="button">Add</button>
          <% end %>
        </div>
      </div>
      <div id="message-list" class="span7">

        <div id="header">
          <%= flash_messages %>
        </div>

        <%= yield %>

      </div>
      <div class="span3">

        <ul class="nav nav-tabs" id="myTab">
          <li class="active"><a href="#import" data-toggle="tab">Import</a></li>
          <li><a href="#attachments" data-toggle="tab">Attachments</a></li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane active" id="import">
            <form class="form-search">
              <input type="text" class="search-query span6" placeholder="Issue..." style="width: 100%;">
              <!-- <div class="input-append span6">
                <button type="submit" class="btn">Search</button>
              </div> -->
            </form>
          </div>
          <div class="tab-pane" id="attachments">
            list of attachments
          </div>
        </div>
      </div>
    </div>

    <!-- <hr/> -->
    <footer>
      <p class="pull-right">&copy; Security Roots Ltd. 2012</p>
    </footer>

  </div> <!-- /container -->

  <%# dradis/all is generated in the target app and will eventually load dradis/dradis_core -%>
  <%= javascript_include_tag "dradis/all" %>
  <%= yield :javascript %>
</body>
</html>
