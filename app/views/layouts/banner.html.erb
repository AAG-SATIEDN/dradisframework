<html>
  <head>
    <title>Welcome to dradis</title>
    <%= stylesheet_link_tag 'banner.css' %>
  </head>
  <body>
    <div class="main main_margin">

  	  <div class="content">								
			  	<div class="text">					
            <%= image_tag 'banner.png' %>
