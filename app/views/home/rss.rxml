xml.instruct!
xml.rss("version" => "2.0") do
  xml.channel do
    xml.title "dradis rss feed"
    xml.link "/home/rss"
    xml.description "This feed containt the latest updates to the dradis knowledge base"
    xml.language "en-gb"

    for item in @items
      xml.item do
        xml.pubDate item.date
        xml.title item.title
        xml.description do
          xml << item.description
        end
      end
    end
  end
end
